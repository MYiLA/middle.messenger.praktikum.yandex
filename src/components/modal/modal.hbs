<div class="modal__wrap">
  {{#if isIconBody}}<img class="modal__icon" src="{{body}}" alt="Модальное окно {{title}}">{{/if}}
  <h2 class="modal__title">{{title}}</h2>
  {{#if isDescBody}}<p class="modal__desc">{{body}}</p>{{/if}}
  {{#if isFormBody}}{{{body}}}{{/if}}
  <div class="modal__buttons-wrap">
    {{#each Buttons}}
      {{{this}}}
    {{/each}}
  </div>
</div>