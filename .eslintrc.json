{
  "env": {
    "browser": true,
    "es2021": true
  },
  "parser": "@typescript-eslint/parser",
  "plugins":[
    "@typescript-eslint"
  ],
  "extends": [
    "airbnb-base",
    "airbnb-typescript/base"
  ],
  "root":true,
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "no-underscore-dangle": ["error", { 
      "allow": ["_bar"],
      "allowAfterThis": true
    }],
    "no-param-reassign": ["error", { 
      "props": false
    }],
    "class-methods-use-this": "off",
    "no-console": "off"
  }
}
