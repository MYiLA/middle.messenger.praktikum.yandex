{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2021",
    "declaration": false,
    "module": "commonjs",
    "strictNullChecks": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
  },
  "include": [
    "./src/**/*.ts",
    "index.d.ts",
    "index.d.ts"
, "src/server.js"  ],
  "exclude": [
    "node_modules",
    "dist",
    ".parcel-cache",
    ".github",
    "public",
  ],
  "paths": {
    "@common/*": ["src/common/*"],
    "@pages/*": ["src/pages/*"],
    "@components/*": ["src/components/*"],
    "@utils/*": ["src/utils/*"],
    "@router": ["src/router.ts"],
    "@src/*": ["src/*"],
    "@packageSrc": ["package.json"],
  }
}
