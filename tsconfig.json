{
  "compilerOptions": {
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "target": "es2021",
    "declaration": false,
    "module": "commonjs",
    "strictNullChecks": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
  },
  "files": ["src/index.ts"],
  "include": [
    "./src/**/*.ts",
    "index.d.ts",
    "index.d.ts",
    "src/server.js",
    "webpack",
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".parcel-cache",
    ".github",
    "public",
  ],
  "paths": {
    "@common/*": ["src/common/*"],
    "@pages/*": ["src/pages/*"],
    "@components/*": ["src/components/*"],
    "@utils/*": ["src/utils/*"],
    "@router": ["src/router.ts"],
    "@src/*": ["src/*"],
    "@packageSrc": ["package.json"],
  },
  "isolatedModules": true,
  "esModuleInterop": true,
  "moduleResolution": "node",
  "ts-node": {
    "compilerOptions": { "module": "commonjs" },
    "swc": true
  },
}
